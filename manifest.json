{
  "manifest_version": 3,
  "name": "GovernsAI Extension",
  "version": "0.1.0",
  "description": "AI governance extension for ChatGPT, Claude, and Gemini",
  "permissions": [
    "storage",
    "activeTab",
    "permissions"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://app.governsai.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://*.chatgpt.com/*"],
      "js": ["content-scripts/common.js", "content-scripts/chatgpt.js"]
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content-scripts/common.js", "content-scripts/claude.js"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content-scripts/common.js", "content-scripts/gemini.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html"
}
